<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DataTemplate x:Key="DefaultLogoDataTemplate">
        <Border BorderThickness="1"
                BorderBrush="{StaticResource SinilinkBlue}"
                CornerRadius="12"
                Width="150"
                Height="150"
                Margin="7.5, 10, 0, 0">
            <TextBlock Foreground="{StaticResource SinilinkBlue}"
                   Text="{Binding LocalizedResources.HomePageComingSoon, Source={StaticResource LocalizedStrings}}"/>
        </Border>
    </DataTemplate>
    
    <DataTemplate x:Key="SponsorWithLogoDataTemplate">
        <Border BorderThickness="1"
                BorderBrush="{StaticResource SinilinkBlue}"
                CornerRadius="12"
                Width="150"
                Height="150"
                Margin="7.5, 10, 0, 0">
            <StackPanel Orientation="Vertical">
                <Image Source="SinilinkLogo.png"
                       Width="120"
                       Height="120"
                       HorizontalAlignment="Center"
                       Margin="0, 5, 0, 0"/>
                <TextBlock Text="Sinilink" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>
